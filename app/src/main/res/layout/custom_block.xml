<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <View

            android:id="@+id/forArifmetic"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:background="@drawable/block_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nupizda"
            android:layout_marginTop="2dp"
            android:layout_marginStart="64dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/forArifmetic"
            app:layout_constraintStart_toStartOf="@id/forArifmetic"/>


        <ImageView
            android:src="@drawable/ic_baseline_drag_handle_24"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/forArifmetic"
            app:layout_constraintEnd_toEndOf="@id/forArifmetic"
            app:layout_constraintStart_toStartOf="@id/forArifmetic"
            app:layout_constraintTop_toTopOf="@id/forArifmetic" />

        <EditText
            android:hint="@string/name"
            android:textColorHint="@color/hint_color"
            android:id="@+id/text_input"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:inputType="text"
            android:layout_marginStart="10dp"
            android:background="@color/transparent"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:textColorHint="@color/hint_color"
            android:hint="@string/expression"
            android:id="@+id/text_input2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="10dp"
            android:inputType="text"
            android:background="@color/transparent"
            android:textColor="@color/text_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/forArifmetic"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</merge>