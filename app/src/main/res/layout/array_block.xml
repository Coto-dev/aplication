<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.LinearLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/marginEnd"
        android:layout_marginStart="@dimen/marginStart"
        android:layout_marginTop="@dimen/block_margin"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/forArifmetic"
            android:layout_width="@dimen/block_size"
            android:layout_height="@dimen/block_height"
            android:layout_margin="@dimen/block_margin"
            android:background="@drawable/block_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:textColorHint="@color/hint_color"
            android:id="@+id/for_array"
            android:layout_width="wrap_content"
            android:minWidth="120dp"
            android:layout_height="wrap_content"
            android:hint="@string/array2"
            android:gravity="start"
            android:inputType="text"
            android:background="@color/transparent"
            android:textColor="@color/text_color"
            android:layout_marginStart="@dimen/marginStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</merge>